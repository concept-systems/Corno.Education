@using Kendo.Mvc.UI
@model Corno.Data.Corno.Masters.Subject

<div class="row">
    @(Html.Kendo().Grid(Model.SubjectCategoryDetails)
        .Name("gridCategory")
        .Columns(columns =>
        {
            columns.Bound(s => s.Id)
                .ClientTemplate("<input type='hidden' name='SubjectCategoryDetails[#= index(data, 'gridCategory')#].Id' value='#= Id #'   />")
                .Hidden();
            columns.Bound(s => s.SerialNo)
                .HeaderHtmlAttributes(new { @class = "k-text-center !k-justify-content-center" })
                .HtmlAttributes(new { @class = "k-text-left !k-justify-content-left text-align-middle" })
                .Title("Sr. No.")
                .Width(30);
            columns.Bound(s => s.CategoryId)
                .ClientTemplate("#= CategoryName #" + "<input type='hidden' name='SubjectCategoryDetails[#= index(data, 'gridCategory')#].CategoryId' value='#= CategoryId #'   />")
                .HeaderHtmlAttributes(new { @class = "k-text-center !k-justify-content-center" })
                .HtmlAttributes(new { @class = "k-text-left !k-justify-content-left text-align-middle" })
                .EditorTemplateName(@"/Subject/_CategoryComboBox")
                .ClientFooterTemplate("Total")
                .Title("Category")
                .Width(100);
            columns.Bound(s => s.PaperCategoryId)
                .ClientTemplate("#= PaperCategoryName #" + "<input type='hidden' name='SubjectCategoryDetails[#= index(data, 'gridCategory')#].PaperCategoryId' value='#= PaperCategoryId #'   />")
                .HeaderHtmlAttributes(new { @class = "k-text-center !k-justify-content-center" })
                .HtmlAttributes(new { @class = "k-text-left !k-justify-content-left text-align-middle" })
                .EditorTemplateName(@"/Subject/_CategoryComboBox")
                .ClientFooterTemplate("Total")
                .Title("Paper Category")
                .Width(100);
            columns.Bound(p => p.MaxMarks)
                .ClientTemplate("#= MaxMarks #" + "<input type='hidden' name='SubjectCategoryDetails[#= index(data, 'gridCategory')#].MaxMarks' value='#= MaxMarks #'   />")
                .HeaderHtmlAttributes(new { @class = "k-text-center !k-justify-content-center" })
                .EditorTemplateName("Number")
                .Title("Max Marks")
                .Width(50);
            columns.Bound(p => p.PassingMarks)
                .ClientTemplate("#= PassingMarks #" + "<input type='hidden' name='SubjectCategoryDetails[#= index(data, 'gridCategory')#].PassingMarks' value='#= PassingMarks #'   />")
                .HeaderHtmlAttributes(new { @class = "k-text-center !k-justify-content-center" })
                .EditorTemplateName("Number")
                .Title("Passing Marks")
                .Width(50);
            columns.Command(command =>
            {
                command.Edit();
                command.Destroy();
            }).Width(100);
        })
        .ToolBar(toolbar => toolbar.Create())
        .Editable(editable => editable.Mode(GridEditMode.PopUp)
            .TemplateName("/Popup Editors/_SubjectCategoryPopup"))
        .Sortable()
        //.Pageable()
        .Scrollable()
        //.Events(events => events.Edit("onEdit"))
        .DataSource(dataSource => dataSource
            .Ajax()
            //.PageSize(20)
            .Events(events => events.Error("error_handler"))
            .Model(model =>
            {
                model.Id(p => p.Id);
                model.Field(p => p.MaxMarks);
                model.Field(p => p.PassingMarks);
            })
            .ServerOperation(false)
            .Create(update => update.Action("Grid_Chapter_Categories", "Subject"))
            .Update(update => update.Action("Grid_Chapter_Categories", "Subject"))
            .Destroy(update => update.Action("Grid_Chapter_Categories", "Subject"))
        )
        .Resizable(resize => resize.Columns(true))
        .Reorderable(reorder => reorder.Columns(true)))
</div>