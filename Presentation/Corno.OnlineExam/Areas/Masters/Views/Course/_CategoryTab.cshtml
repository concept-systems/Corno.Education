@using Kendo.Mvc.UI
@model Corno.Data.Corno.Masters.Course

<div class="row">
    @(Html.Kendo().Grid(Model.CourseCategoryDetails)
        .Name("gridCategory")
        .Columns(columns =>
        {
            columns.Bound(s => s.Id)
                .ClientTemplate("<input type='hidden' name='CourseCategoryDetails[#= index(data, 'gridCategory')#].Id' value='#= Id #'   />")
                .Hidden();
            columns.Bound(s => s.SerialNo)
                .HeaderHtmlAttributes(new { @class = "k-text-center !k-justify-content-center" })
                .HtmlAttributes(new { @class = "k-text-center !k-justify-content-center text-align-middle" })
                .Width(30);
            columns.Bound(s => s.CategoryId)
                .ClientTemplate("#= CategoryName #" + "<input type='hidden' name='CourseCategoryDetails[#= index(data, 'gridCategory')#].CategoryId' value='#= CategoryId #'   />")
                .HtmlAttributes(new { @class = "k-text-left !k-justify-content-left text-align-middle" })
                .ClientFooterTemplate("Total")
                .Title("Category")
                .Width(100);
            columns.Bound(s => s.RootCategoryId)
                .ClientTemplate("#= RootCategoryName #" + "<input type='hidden' name='CourseCategoryDetails[#= index(data, 'gridCategory')#].RootCategoryId' value='#= RootCategoryId #'   />")
                .HtmlAttributes(new { @class = "k-text-left !k-justify-content-left text-align-middle" })
                .ClientFooterTemplate("Total")
                .Title("Root Category")
                .Width(100);
            columns.Command(command =>
            {
                command.Edit();
                command.Destroy();
            }).Width(100);
        })
        .ToolBar(toolbar => toolbar.Create())
        //.Editable(editable => editable.Mode(GridEditMode.InLine))
        .Editable(editable => editable.Mode(GridEditMode.PopUp)
            .TemplateName("/Popup Editors/_CourseCategoryPopup"))
        .Sortable()
        .Pageable()
        .Scrollable()
        //.Events(events => events.Edit("onEdit"))
        .DataSource(dataSource => dataSource
            .Ajax()
            .PageSize(20)
            .Events(events => events.Error("error_handler"))
            .Model(model =>
            {
                model.Id(p => p.Id);
                /*model.Field(p => p.CategoryViewModel).DefaultValue(new MasterViewModel())
                    .Editable();*/
            })
            .ServerOperation(false)
            .Create(update => update.Action("Inline_Create_Update_Destroy", "Course"))
            .Update(update => update.Action("Inline_Create_Update_Destroy", "Course"))
            .Destroy(update => update.Action("Inline_Create_Update_Destroy", "Course"))
        )
        .Resizable(resize => resize.Columns(true))
        .Reorderable(reorder => reorder.Columns(true)))
</div>