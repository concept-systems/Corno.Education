                                    <label class="col-sm-2 control-label ">Commencement Date :</label>
                                    <div class="col-sm-4">
                                        @Html.TextBoxFor(m => m.CommencementDate, "{0:dd-MMM-yyyy}", new { @id = "CommencementDate", @class = "form-control", value = "@Model.CommencementDate", placeholder = "Select Commencement Date", data_toggle = "tooltip", data_placement = "bottom", title = "Date" })
