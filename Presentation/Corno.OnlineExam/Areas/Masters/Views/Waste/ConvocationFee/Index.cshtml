@model IEnumerable<Corno.Data.Masters.ConvocationFeeViewModel>
@{
    ViewBag.Title = "ConvocationFee Fee";
}

<div class="row">
    <div class="box-content">
        <div id="breadcrumb" class="col-md-12">
            <ol class="breadcrumb">
                <li><a href="#">OnlineExam</a></li>
                <li><a href="#">Masters</a></li>
                <li><a href="#">Convocation Fee </a></li>
            </ol>
        </div>
    </div>
</div>

<div class="panel panel-primary">
    <div class="panel-heading">
        <strong>Convocation Fee Lists</strong>
        <a href="@Url.Action("Create", "ConvocationFee")" class="btn btn-small btn-success pull-right">
            <span><i class="fa fa-plus-square large"></i></span> Add New
        </a>
    </div>

    <div class="box-content no-padding table-responsive">
        <div class="box">

            <table class="table table-bordered table-striped table-responsive table-hover table-heading table-datatable" id="datatable-2">
                <thead>
                    <tr>
                        <th class="text-center col-sm-1">ID</th>
                        @*<th class="text-center col-sm-4">Fee Details</th>*@
                        <th class="text-center col-sm-2">UG Diploma</th>
                        <th class="text-center col-sm-2">Graduate Degree</th>
                        <th class="text-center col-sm-2">PG Diploma</th>
                        <th class="text-center col-sm-1">PGDegree</th>
                        <th class="text-center col-sm-1">M.Phil</th>
                        <th class="text-center col-sm-1">Ph.D</th>
                        <th class="text-center col-sm-1">In India</th>
                        <th class="text-center col-sm-1">In Abroad</th>

                        @*<th class="text-center col-sm-2">Status</th>*@

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            @*<td class="text-centre">@item.ID</td>*@
                            @*<td class="text-left">@item.</td>*@
                            <td class="text-center">@item.UndergraduateDiplomaFee</td>
                            <td class="text-center">@item.GraduateDegreeFee</td>
                            <td class="text-center">@item.PostGraduateDiplomaFee</td>
                            <td class="text-center">@item.PostGraduateDegreeFee</td>
                            <td class="text-center">@item.MPhilFee</td>
                            <td class="text-center">@item.PhDFee</td>
                            <td class="text-center">@item.ForStudentsInIndiaFee</td>
                            <td class="text-center">@item.ForStudentsInAbroadFee</td>
                            @*<td class="text-center">
                                @SharedViewFunctions.GetStatus(item.Status)
                            </td>*@

                            <td class="text-center">
                                <div class="btn-group">
                                    <a class="btn btn-info" href="#"><i class="fa fa-indent"></i> Action </a>
                                    <a class="btn btn-info dropdown-toggle" data-toggle="dropdown" href="#">
                                        <span class="fa fa-caret-down"></span>
                                        <span class="sr-only">Toggle Dropdown</span>
                                    </a>
                                    <ul class="dropdown-menu" role="menu">
                                        <li>
                                            <a href="@Url.Action("Edit", "ConvocationFee", new { id = item.Id })">
                                                <span><i class="fa fa-edit large"></i></span> Edit
                                            </a>
                                        </li>
                                        <li>
                                            <a href="@Url.Action("Delete", "ConvocationFee", new { id = item.Id })">
                                                <span><i class="fa fa-trash-o large"></i></span> Delete
                                            </a>
                                        </li>
                                    </ul>

                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
                @*<tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">@item.ID</td>
                                <td class="text-left">@item.FeeDetails</td>
                                <td class="text-center">@item.Fee</td>
                                <td class="text-center">
                                    @SharedViewFunctions.GetStatus(item.Status)
                                </td>

                            </tr>
                        }
                    </tbody>*@
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        // Load Datatables and run plugin on tables
        LoadDataTablesScripts(AllTables);
        // Add Drag-n-Drop feature
        WinMove();
    });
    // Run Datables plugin and create 3 variants of settings
    function AllTables() {
        TestTable1();
        TestTable2();
        TestTable3();
        LoadSelect2Script(MakeSelect2);
    }
    function MakeSelect2() {
        $('select').select2();
        $('.dataTables_filter').each(function () {
            $(this).find('label input[type=text]').attr('placeholder', 'Search');
        });
    }
</script>
