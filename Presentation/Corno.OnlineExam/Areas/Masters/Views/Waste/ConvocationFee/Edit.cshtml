@model Corno.Data.Masters.ConvocationFeeViewModel

@{
    ViewBag.Title = "Edit Convocation Fee" + Model.Id;
}
<div class="row">
    <div id="breadcrumb" class="col-md-12">
        <ol class="breadcrumb">
            <li><a href="#">OnlineExam</a></li>
            <li><a href="#">Master</a></li>
            <li><a href="#">Edit Convocation Fee Form </a></li>
        </ol>
    </div>
</div>
@Html.ValidationSummary()
<div class="row">
    <div class="col-xs-12 col-sm-12">
        <div class="box ui-draggable ui-droppable">
            <div class="box-header">
                <div class="box-name">
                    <i class="fa fa-edit large"></i>
                    <span>Edit  Convocation Fee Form No :  @Model.Id</span>
                </div>
                <div class="box-icons">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="expand-link">
                        <i class="fa fa-expand"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
                <div class="no-move"></div>
            </div>
            <div class="box-content">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(m => m.Id)
                    <div class="form-horizontal">
                        <div class="box-content">
                            <div class="form-group">
                                <div class="panel panel-info">
                                    <div class="panel-heading"><strong>Fee Details</strong></div>
                                    <div class="form-group has-feedback">
                                        <label class="col-sm-3 control-label "> Undergraduate Diploma :</label>
                                        <div class="col-sm-2">
                                            @Html.TextBoxFor(m => m.UndergraduateDiplomaFee, new { @class = "form-control", value = "@Model.UndergraduateDiplomaFee", placeholder = " Fee Details", data_toggle = "tooltip", data_placement = "bottom", title = "Fee Details" })
                                        </div>
                                        @*</div>
                                            <div class="form-group has-feedback">*@
                                        <label class="col-sm-3 control-label "> Graduate Degree :</label>
                                        <div class="col-sm-2">
                                            @Html.TextBoxFor(m => m.GraduateDegreeFee, new { @class = "form-control", value = "@Model.GraduateDegreeFee", placeholder = " Fee Details", data_toggle = "tooltip", data_placement = "bottom", title = "Fee Details" })
                                        </div>
                                    </div>
                                    <div class="form-group has-feedback">
                                        <label class="col-sm-3 control-label "> Post Graduate Diploma :</label>
                                        <div class="col-sm-2">
                                            @Html.TextBoxFor(m => m.PostGraduateDiplomaFee, new { @id = "PostGraduateDiplomaFee", @class = "form-control", value = "@Model.PostGraduateDiplomaFee", placeholder = " Fee Details", data_toggle = "tooltip", data_placement = "bottom", title = "Fee Details" })
                                        </div>
                                        @*</div>
                                            <div class="form-group has-feedback">*@
                                        <label class="col-sm-3 control-label "> Post Graduate Degree :</label>
                                        <div class="col-sm-2">
                                            @Html.TextBoxFor(m => m.PostGraduateDegreeFee, new { @id = "PostGraduateDegreeFee", @class = "form-control", value = "@Model.PostGraduateDegreeFee", placeholder = " Fee Details", data_toggle = "tooltip", data_placement = "bottom", title = "Fee Details" })
                                        </div>
                                    </div>
                                    <div class="form-group has-feedback">
                                        <label class="col-sm-3 control-label "> M. Phil. :</label>
                                        <div class="col-sm-2">
                                            @Html.TextBoxFor(m => m.MPhilFee, new { @id = "MPhilFee", @class = "form-control", value = "@Model.MPhilFee", placeholder = " Fee Details", data_toggle = "tooltip", data_placement = "bottom", title = "Fee Details" })
                                        </div>
                                        @*</div>
                                            <div class="form-group has-feedback">*@
                                        <label class="col-sm-3 control-label">Ph. D. :</label>
                                        <div class="col-sm-2">
                                            @Html.TextBoxFor(m => m.PhDFee, new { @id = "PhDFee", @class = "form-control", value = "@Model.PhDFee", placeholder = " Fee Details", data_toggle = "tooltip", data_placement = "bottom", title = "Fee Details" })
                                        </div>
                                    </div>
                                </div>
                                <div class="panel panel-info">
                                    <div class="panel-heading"><strong> By Post Fee Details</strong></div>
                                    <div class="form-group has-feedback">
                                        <label class="col-sm-3 control-label ">For Students In India :</label>
                                        <div class="col-sm-2">
                                            @Html.TextBoxFor(m => m.ForStudentsInIndiaFee, new { id = "ForStudentsInIndiaFee", @class = "form-control", value = "@Model.ForStudentsInIndiaFee", placeholder = " Fee Details", data_toggle = "tooltip", data_placement = "bottom", title = "Fee Details" })
                                        </div>
                                        @*</div>
                                            <div class="form-group has-feedback">*@
                                        <label class="col-sm-3 control-label "> For Students In Abroad :</label>
                                        <div class="col-sm-2">
                                            @Html.TextBoxFor(m => m.ForStudentsInAbroadFee, new { id = "ForStudentsInAbroadFee", @class = "form-control", value = "@Model.ForStudentsInAbroadFee", placeholder = " Fee Details", data_toggle = "tooltip", data_placement = "bottom", title = "Fee Details" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-2">
                                    <button type="button" value="Index" class="btn btn-primary btn-label-left pull-left" onclick="location.href = '@Url.Action("Index", "ConvocationFee")'">
                                        <span><i class="fa fa-list-ul"></i></span>
                                        Back to List
                                    </button>
                                </div>
                                <div class="col-sm-offset-8 col-sm-2">
                                    <button type="submit" value="Create" title="Save" class="btn btn-primary btn-label-left pull-right">
                                        <span><i class="fa fa-save"></i></span>
                                        Save
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

