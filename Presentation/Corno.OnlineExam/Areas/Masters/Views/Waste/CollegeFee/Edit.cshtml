@model OnlineExam.Models.CollegeFeeViewModel
@using Kendo.Mvc.UI
@{
    ViewBag.Title = "Edit CollegeFee " + Model.ID;
}

<div class="row">
    <div class="box-content ">
        <div id="breadcrumb" class="col-md-12">
            <ol class="breadcrumb">
                <li><a href="#">OnlineExam</a></li>
                <li><a href="#">Masters</a></li>
                <li><a href="#">Edit CollegeFee</a></li>
            </ol>
        </div>
    </div>
</div>
@Html.ValidationSummary()
<div class="row">
    <div class="col-xs-12 col-sm-12">
        <div class="box ui-draggable ui-droppable">
            <div class="box-header">
                <div class="box-name">
                    <i class="fa fa-edit large"></i>
                    <span>Edit CollegeFee :  @Model.ID</span>
                </div>
                <div class="box-icons">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="expand-link">
                        <i class="fa fa-expand"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
                <div class="no-move"></div>
            </div>
            <div class="box-content">
                @using (Html.BeginForm("Edit", "CollegeFee", FormMethod.Post, new { @id = "dd" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.ID)
                    <div class="form-horizontal">
                        <div class="box-content">
                            <div class="form-group">
                                <label class="col-sm-2 control-label">College :</label>
                                <div class="col-sm-4">
                                    @(Html.Kendo().ComboBox()
                                        .Name("CollegeID")
                                        .HtmlAttributes(new { style = "width:100%" })
                                        .Placeholder("Select College...")
                                        .Filter(FilterType.Contains)
                                        .BindTo(new SelectList(Model.Colleges, "ID", "Name"))
                                    )
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Fee :</label>
                                <div class="col-sm-4">
                                    @(Html.Kendo().ComboBox()
                                        .Name("CollegeID")
                                        .HtmlAttributes(new { style = "width:100%" })
                                        .Placeholder("Select Fee...")
                                        .DataTextField("Name")
                                        .DataValueField("ID")
                                        .Filter(FilterType.Contains)
                        //.BindTo(new SelectList(Model.Courses, "ID", "Name"))
                                        .DataSource(source =>
                                        {
                                            source.Read(read =>
                                            {
                                                read.Action("GetCascadeFee", "CollegeFee")
                                                    .Data("filterFees");
                                            })
                                            .ServerFiltering(true);
                                        })
                                        .Enable(false)
                                        .AutoBind(false)
                                        .CascadeFrom("CollegeID")
                                    )
                                    <script>
                                        function filterCourseTypes() {
                                            return {
                                                collegeID: $("#CollegeID").val(),
                                                //courseFilter: $("#CourseID").data("kendoComboBox").input.val()
                                            };
                                        }
                                    </script>
                                </div>
                            </div>
                            <div class="form-group  has-feedback">
                                <label class="col-sm-2 control-label">Amount :</label>
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(m => m.Amount, new { @id = "Amount", @class = "form-control", value = "@Model.Amount", placeholder = "Enter Amount", data_toggle = "tooltip", data_placement = "bottom", title = "Amount" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-2">
                                    <button type="button" value="Index" class="btn btn-primary btn-label-left pull-left" onclick="location.href='@Url.Action("Index", "CollegeFee")'">
                                        <span><i class="fa fa-list-ul"></i></span>
                                        Back to List
                                    </button>
                                </div>
                                <div class="col-sm-offset-8 col-sm-2">
                                    <button type="submit" value="Save" title="Save" class="btn btn-primary btn-label-left pull-right">
                                        <span><i class="fa fa-save"></i></span>
                                        Save
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
