@model OnlineExam.Models.SubjectCategoryViewModel
@using Kendo.Mvc.UI
@{
    ViewBag.Title = "Delete";

}
<div class="row">
    <div class="box-content ">
        <div id="breadcrumb" class="col-md-12">
            <ol class="breadcrumb">
                <li><a href="#">OnlineExam</a></li>
                <li><a href="#">Masters</a></li>
                <li><a href="#">Delete Subject Category</a></li>
            </ol>
        </div>
    </div>
</div>
@Html.ValidationSummary()
<div class="row">
    <div class="col-xs-12 col-sm-12">
        <div class="box ui-draggable ui-droppable">
            <div class="box-header">
                <div class="box-name">
                    <i class="fa fa-trash-o large"></i>
                    <span>Subject Category</span>
                </div>
                <div class="box-icons">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="expand-link">
                        <i class="fa fa-expand"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
                <div class="no-move"></div>
            </div>
            <div class="box-content">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="form-horizontal">
                        <div class="box-content">
                            <div class="form-group  has-feedback">
                                <label class="col-sm-2 control-label">Subject Category Name :</label>
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(m => m.Name, new { @id = "Name", @class = "form-control", value = "@Model.Name", placeholder = "Enter Subject Category Name", data_toggle = "tooltip", data_placement = "bottom", title = "Subject Category Name" })
                                </div>
                            </div>
                            <div class="form-group  has-feedback">
                                <label class="col-sm-2 control-label for form-styles">Description :</label>
                                <div class="col-sm-4">
                                    @Html.TextAreaFor(m => m.Description, new { cols = 20, @rows = 4, @id = "Description", @class = "form-control", value = "@Model.Description", placeholder = "Description", data_toggle = "tooltip", data_placement = "bottom", title = "Description" })
                                </div>
                            </div><div class="form-group  has-feedback">
                                <label class="col-sm-2 control-label">Short Name:</label>
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(m => m.ShortName, new { @id = "ShortName", @class = "form-control", value = "@Model.ShortName", placeholder = "Enter Short Name", data_toggle = "tooltip", data_placement = "bottom", title = "Short Name" })
                                </div>
                            </div>
                            <div class="form-group  has-feedback">
                                <label class="  col-sm-2 control-label"></label>
                                <div class="col-sm-3">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" id="IsActive" name="IsActive" value="True">Is Active?
                                            <i class="fa fa-square-o small"></i>
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-2">
                                    <button type="button" value="Index" class="btn btn-primary btn-label-left pull-left" onclick="location.href='@Url.Action("Index", "SubjectCategory")'">
                                        <span><i class="fa fa-list-ul"></i></span>
                                        Back to List
                                    </button>
                                </div>
                                <div class="col-sm-offset-8 col-sm-2">
                                    <button type="submit" value="Delete" onclick="return confirm('Are you sure you wish to delete this SubjectCategory?')" title=" save" class="btn btn-danger btn-label-left pull-right">
                                        <span><i class="fa fa-trash-o"></i></span>
                                        Delete
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    function DemoSelect2() {
       
    }
    $(document).ready(function () {
        // Create Wysiwig editor for textare
        //TinyMCEStart('#wysiwig_simple', null);
        //TinyMCEStart('#Description', 'extreme');
        //// Add tooltip to form-controls
        $('.form-control').tooltip();

        LoadSelect2Script(DemoSelect2);

        //// Load example of form validation
        LoadBootstrapValidatorScript(DemoFormValidator);
    });
</script>
