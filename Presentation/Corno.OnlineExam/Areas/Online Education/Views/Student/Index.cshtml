@using Corno.Data.Dtos.Online_Education
@using Corno.Globals.Constants
@using Kendo.Mvc.UI
@model Corno.Data.Corno.Question_Bank.Models.Paper

@{
    ViewBag.Title = "Manual Paper";
}

<div class="row">
    <div class="box-content">
        <div id="breadcrumb" class="col-md-12">
            <ol class="breadcrumb">
                <li><a href="#">OnlineExam</a></li>
                <li><a href="#">Online Education</a></li>
                <li><a href="#">Student</a></li>
            </ol>
        </div>
    </div>
</div>

<div class="k-card k-card-vertical">
    <div class="k-card-header k-card-tertiary">
        <div class="row">
            <div class="col-sm-8">
                <h3>Online Education Students</h3>
            </div>
            <div class="k-card-actions k-card-actions-horizontal k-card-actions-end col-sm-4">
                @(Html.Kendo().Button()
                    .Name("import")
                    .Icon("import")
                    .SpriteCssClass("k-icon-64")
                    .FillMode(ButtonFillMode.Outline)
                    .ThemeColor(ThemeColor.Info)
                    .Content("Import")
                    .Events(e => e.Click("onImport"))
                    .HtmlAttributes(new{@class = "w-100"}))
                @*@(Html.Kendo().Button()
                    .Name("New")
                    .Icon("plus")
                    .SpriteCssClass("k-icon-64")
                    .FillMode(ButtonFillMode.Outline)
                    .ThemeColor(ThemeColor.Info)
                    .Content("Add New")
                    .Events(e => e.Click("onCreate"))
                    .HtmlAttributes(new { @class = "w-100" }))*@
            </div>
        </div>
    </div>

    <div class="k-card-body">
        @*<div class="grid-container">*@
        <div style="overflow-x: auto;">
            @(Html.Kendo().Grid<StudentIndexDto>()
                .Name("grid")
                .ToolBar(t => t.Search())
                .Pageable()
                .Sortable()
                .Filterable(f => f.Mode(GridFilterMode.Row))
                .Resizable(resize => resize.Columns(true)) // Allow column resizing
                .HtmlAttributes(new { style = "width: 800px;" })
                .Columns(columns =>
                {
                    columns.Bound(m => m.Prn)
                        .HtmlAttributes(new { @class = "k-text-center !k-justify-content-center" })
                        .HeaderHtmlAttributes(new { @class = "k-text-center !k-justify-content-center" })
                        .Title("PRN");
                    columns.Bound(m => m.CollegeId)
                        .HtmlAttributes(new { @class = "k-text-center !k-justify-content-center" })
                        .HeaderHtmlAttributes(new { @class = "k-text-center !k-justify-content-center" })
                        .Title("College");
                    columns.Bound(m => m.CourseId)
                        .HtmlAttributes(new { @class = "k-text-center !k-justify-content-center" })
                        .HeaderHtmlAttributes(new { @class = "k-text-center !k-justify-content-center" })
                        .Title("Course");
                    columns.Bound(m => m.BranchId)
                        .HtmlAttributes(new { @class = "k-text-right !k-justify-content-right" })
                        .HeaderHtmlAttributes(new { @class = "k-text-center !k-justify-content-center" })
                        .Title("Branch");
                    columns.Bound(m => m.FeeId)
                        .HtmlAttributes(new { @class = "k-text-right !k-justify-content-right" })
                        .HeaderHtmlAttributes(new { @class = "k-text-center !k-justify-content-center" })
                        .Title("Fee Id");
                    columns.Bound(m => m.RegularFee)
                        .HtmlAttributes(new { @class = "k-text-right !k-justify-content-right" })
                        .HeaderHtmlAttributes(new { @class = "k-text-center !k-justify-content-center" })
                        .Title("Regular Fee");
                    columns.Bound(m => m.BacklogFee)
                        .HtmlAttributes(new { @class = "k-text-right !k-justify-content-right" })
                        .HeaderHtmlAttributes(new { @class = "k-text-center !k-justify-content-center" })
                        .Title("Backlog Fee");
                    /*columns.Command(command =>
                    {
                        command.Custom("Edit").Text("Edit").IconClass("k-icon k-i-pencil")
                            .HtmlAttributes(new { @class = "k-grid-edit" })
                            .Visible("function(dataItem) { return dataItem.Status === 'Active'; }"); // Show only if Status is "Active";
                    })
                        .HeaderHtmlAttributes(new { @class = "k-text-center !k-justify-content-center" })
                        .HtmlAttributes(new { @class = "k-text-center !k-justify-content-center" })
                        .Title("Actions"); */
                })
                .Events(events => events.DataBound("onDataBound"))
                .DataSource(dataSource => dataSource
                    .Ajax()
                    .Read(read => read.Action("GetIndexDtos", "Student", new { area = "Online Education" }))
                    .Sort(sort => sort.Add(ModelConstants.Id).Ascending()) // Initial sort by Id in ascending order
                    .Model(model => model.Id(ModelConstants.Id))
                    .Events(e => e.Error("onGridError"))
                ))
        </div>
    </div>
</div>


<script>
    function onCreate() {
        window.location.href = '/Online Education/Student/Create';
    }

    function onImport() {
        window.location.href = '/Online Education/Student/Import';
    }

    function onDataBound(e) {
        var grid = $("#grid").data("kendoGrid");
        // Auto-fit each column
        grid.columns.forEach(function (column, index) {
            grid.autoFitColumn(index);
        });

        $(".k-grid-edit").on("click", function () {
            var grid = $("#grid").data("kendoGrid");
            var row = $(this).closest("tr");
            var dataItem = grid.dataItem(row);

            if (dataItem) {
                var id = dataItem.Id; // Assuming Id is the unique identifier of the item
                window.location.href = '/Student/Edit/' + id; // Replace with your edit page URL
            }
        });
