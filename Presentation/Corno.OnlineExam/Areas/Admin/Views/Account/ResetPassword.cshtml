@model Corno.Data.Admin.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset Password";
}
<div class="row">
    <div id="breadcrumb" class="col-md-12">
        <ol class="breadcrumb">
            <li><a href="#">OnlineExam</a></li>
            <li><a href="#">Admin</a></li>
            <li><a href="#">Reset Password</a></li>
        </ol>
    </div>
</div>

@if (ViewBag.successMessage != string.Empty)
{
    <div id="myModel" class="form-group has-success has-feedback ">
        <p class="text-success">Password reset successfully.</p>
    </div>
}
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
@*<link href="modalPopLite1.3.1/modalPopLite.css" rel="stylesheet" type="text/css" />*@
@*<script type="text/javascript" src="modalPopLite1.3.1/modalPopLite.min.js"></script>*@

<div class="row ">
    @*<div class="col-xs-4 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">*@
    <div class="box-content">
        @Html.ValidationSummary()
        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <div class="panel panel-info">
                    <div class="panel-heading"><strong>Reset Password</strong></div>
                    <div class="form-group has-feedback">
                        <label class="col-sm-2 control-label">New Password :</label>
                        <div class="col-sm-4 input-group ">
                            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                            <input type="password" class="form-control" name="Newpassword" />
                        </div>
                    </div>
                    <div class="form-group  has-feedback">
                        <label class="col-sm-2 control-label">Confirm Password :</label>
                        <div class="col-sm-4 input-group">
                            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                            <input type="password" class="form-control" name="ConfirmPassword" />
                        </div>
                    </div>
                </div>
                <div class="form-group has-success has-feedback">
                    <label class="col-sm-2 control-label"></label>
                    <div class="col-sm-2">
                        <button type="button" value="Index" class="btn btn-primary btn-label-left pull-left" onclick="location.href='@Url.Action("Index", "Home")'">
                            <span><i class="fa fa-list-ul"></i></span>
                            Back to Home
                        </button>
                    </div>
                    <label class=" control-label"></label>
                    <div class="col-sm-3">
                        <button type="submit" value="Sign in" class="btn btn-primary btn-label-left pull-left">
                            <span><i class="fa fa-sign-in"></i></span>
                            Save
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
    @*</div>*@
</div>

