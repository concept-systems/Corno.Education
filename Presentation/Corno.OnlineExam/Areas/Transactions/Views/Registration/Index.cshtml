@model List<Corno.Data.Corno.RegistrationIndex>
@using Kendo.Mvc.UI
@{
    ViewBag.Title = "Student Registration Form";
}
<div class="row">
    <div id="breadcrumb" class="col-md-12">
        <ol class="breadcrumb">
            <li><a href="#">Online Exam</a></li>
            <li><a href="#">Student Form</a></li>
        </ol>
    </div>
</div>

<div class="panel panel-primary">
    <div class="panel-heading">
        <strong>Student List</strong>
        <a href="@Url.Action("Create", "Registration")" class="btn btn-small btn-success pull-right">
            <span><i class="fa fa-plus fa-lg"></i></span> Add New
        </a>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            <div class="row">
                <label class="control-label col-sm-1">College:</label>
                <div class="col-sm-4">
                    @(Html.Kendo().ComboBox()
                        .Name("CollegeId")
                        .HtmlAttributes(new { style = "width:100%" })
                        .Placeholder("Select College...")
                        .Filter(FilterType.Contains)
                        .DataTextField("NameWithId")
                        .DataValueField("Id")
                        .SelectedIndex(-1)
                        .DataSource(source =>
                        {
                            source.Read(read =>
                            {
                                read.Action("GetColleges", "University");
                            })
                                .ServerFiltering(true);
                        })
                    )
                </div>

                <label class="col-sm-1 control-label text-center">Course:</label>
                <div class="col-sm-4">
                    @(Html.Kendo().ComboBox()
                        .Name("CourseId")
                        .HtmlAttributes(new { style = "width:100%" })
                        .Placeholder("Select Course...")
                        .DataTextField("NameWithId")
                        .DataValueField("Id")
                        .Filter(FilterType.Contains)
                        .DataSource(source =>
                        {
                            source.Read(read =>
                            {
                                read.Action("GetCoursesByCollegeInRegistration", "University")
                                    .Data("filterCourses");
                            })
                            .ServerFiltering(true);
                        })
                        .Enable(false)
                        .AutoBind(false)
                        .CascadeFrom("CollegeId")
                    )
                </div>
                <div class="col-sm-2 text-center">
                    <button type="submit" class="btn btn-primary btn-label-left">
                        <span><i class="fa fa-search fa-lg"></i></span> Search
                    </button>
                </div>
            </div>
        }
        <table class="table table-bordered table-striped table-responsive table-hover table-heading table-datatable" id="datatable-1">
            <thead>
            <tr>
                <th class="text-center col-sm-1">PRN</th>
                <th class="text-center col-sm-3">Name</th>
                <th class="text-center col-sm-1">Gender</th>
                <th class="text-center col-sm-2">Course</th>
                <th class="text-center col-sm-2">Date of Birth</th>
                <th class="text-center col-sm-1">Status</th>
                <th class="col-sm-2"></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">@item.PrnNo</td>
                    <td class="text-left">@item.StudentName</td>
                    <td class="text-left">@item.Gender</td>
                    <td class="text-left">@item.CourseName</td>
                    <td class="text-center">@String.Format("{0:dd-MMM-yyyy}", item.Dob)</td>
                    <td class="text-center">
                        @SharedViewFunctions.GetStatus(item.Status)
                    </td>
                    <td class="text-left">
                        <div class="btn-group">
                            <a class="btn btn-lg btn-info btn-label-left " href="#"><i class="fa fa-indent"></i> Action </a>
                            <a class="btn btn-info dropdown-toggle" data-toggle="dropdown" href="#">
                                <span class="fa fa-caret-down"></span>
                                <span class="sr-only">Toggle Dropdown</span>
                            </a>
                            <ul class="dropdown-menu" role="menu">
                                @if (false == item.IsApproved)
                                {
                                    <li>
                                        <a href="@Url.Action("Edit", "Registration", new {id = item.Id})">
                                            <span><i class="fa fa-edit large"></i></span> Edit
                                        </a>
                                    </li>
                                }
                                <li>
                                    <a href="@Url.Action("Details", "Registration", new {id = item.Id})">
                                        <span><i class="fa fa-edit large"></i></span> View
                                    </a>
                                </li>
                                @*<li>
                                            <a href="@Url.Action("Delete", "Registration" , new { id=item.Id })">
                                                <span><i class="fa fa-trash-o large"></i></span> Delete
                                            </a>
                                        </li>*@
                            </ul>

                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

<script type="text/javascript">
    function LoadDropDownLists() {
        $('#s2_College').select2({ placeholder: "Select College" });
        $('#s2_Course').select2({ placeholder: "Select Course" });

    }
    function filterCourses() {
        return {
            CollegeId: $("#CollegeId").val()
        };
    }

    $(document).ready(function () {
        // Load Datatables and run plugin on tables
        LoadDataTablesScripts(AllTables);

        // Load Drop down lists
        //LoadSelect2Script(DemoSelect2);

        // Add Drag-n-Drop feature
        //WinMove();
        $('#datatable-1').dataTable({
            "order": [[4, "desc"]]
        });
    });
    // Run Datables plugin and create 3 variants of settings
    function AllTables() {
        TestTable1();
        TestTable2();
        TestTable3();
        LoadSelect2Script(MakeSelect2);
    }

    function MakeSelect2() {
        $('select').select2();
        $('.dataTables_filter').each(function () {
            $(this).find('label input[type=text]').attr('placeholder', 'Search');
        });
    }
</script>


