@model IEnumerable<OnlineExam.Models.Exam>
@{
    ViewBag.Title = "Student Exam Form";
}
<div class="row">
    <div id="breadcrumb" class="col-md-12">
        <ol class="breadcrumb">
            <li><a href="#">Online Exam</a></li>
            <li><a href="#">Student Exam Form</a></li>
        </ol>
    </div>
</div>
<div class="panel panel-primary">
    <div class="panel-heading">
        <strong>Exam Form List</strong>
        <a href="@Url.Action("Create", "Exam")" class="btn btn-small btn-success pull-right">
            <span><i class="fa fa-plus fa-lg"></i></span> Add New
        </a>
    </div>
    <div class="panel-body">
        <table class="table table-bordered table-striped table-responsive table-hover table-heading table-datatable" id="datatable-2">
            <thead>
                <tr>
                    <th class="text-center col-sm-1">ID</th>
                    <th class="text-center col-sm-3">Course</th>
                    <th class="text-center col-sm-3">College</th>
                    <th class="text-center col-sm-2">Date</th>
                    <th class="text-center col-sm-1">Status</th>
                    <th class="col-sm-2"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">@item.ID</td>
                        <td class="text-left">@item.Student.Course.Name</td>
                        <td class="text-left">@item.Student.College.Name</td>
                        <td class="text-center">@item.ModifiedDate</td>
                        <td class="text-center ">
                            @SharedViewFunctions.GetStatus(item.Status)
                        </td>
                        <td class="text-left">
                            <div class="btn-group">
                                <a class="btn btn-info" href="#"><i class="fa fa-indent"></i> Action </a>
                                <a class="btn btn-info dropdown-toggle" data-toggle="dropdown" href="#">
                                    <span class="fa fa-caret-down"></span>
                                    <span class="sr-only">Toggle Dropdown</span>
                                </a>
                                <ul class="dropdown-menu text-left" role="menu">
                                    @if (false == item.IsApproved)
                                    {
                                        <li>
                                            <a href="@Url.Action("Edit", "Exam", new { id = item.ID })">
                                                <span><i class="fa fa-edit large"></i></span> Edit
                                            </a>
                                        </li>
                                    }
                                    <li>
                                        <a href="@Url.Action("Details", "Exam", new { id = item.ID })">
                                            <span><i class="fa fa-trash-o large"></i></span> View
                                        </a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("Delete", "Exam", new { id = item.ID })">
                                            <span><i class="fa fa-trash-o large"></i></span> Delete
                                        </a>
                                    </li>
                                </ul>

                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        // Load Datatables and run plugin on tables
        LoadDataTablesScripts(AllTables);
        // Add Drag-n-Drop feature
        WinMove();
    });
    // Run Datables plugin and create 3 variants of settings
    function AllTables() {
        TestTable1();
        TestTable2();
        TestTable3();
        LoadSelect2Script(MakeSelect2);
    }
    function MakeSelect2() {
        $('select').select2();
        $('.dataTables_filter').each(function () {
            $(this).find('label input[type=text]').attr('placeholder', 'Search');
        });
    }
</script>


