@if (TempData[ModelConstants.Error] != null)
{
    <script type="text/javascript">
        // Check if there's an error message in TempData
        var errorMessage = '@(TempData[ModelConstants.Error])';
        //alert(errorMessage);
        if (errorMessage) {
            // Show custom error message using Bootbox
            bootbox.dialog({
                message: '<div class="text-danger"><i class="fa fa-exclamation-circle"></i> ' + errorMessage + '</div>',
                buttons: {
                    ok: {
                        label: 'OK',
                        className: 'btn-danger'
                    }
                }
            });
        }
    </script>
}
@if (TempData[ModelConstants.Success] != null)
{
    <div class="text-success">
        <p>Success: @TempData[ModelConstants.Success].ToString()</p>
    </div>
    <script type="text/javascript">
        bootbox.alert("@TempData[ModelConstants.Success]")
    </script>
}

